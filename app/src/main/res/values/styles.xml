<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/FontForWholeAppTextView</item>
        <item name="android:buttonStyle">@style/FontForWholeAppButton</item>




    </style>

    <style name="FontForWholeAppTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/font</item>
    </style>
    <style name="FontForWholeAppButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/font</item>
    </style>



</resources>
