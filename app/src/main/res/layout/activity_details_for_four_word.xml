<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_light"
    tools:context=".Activity.ActivityDetails">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_above="@id/lnr_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-100dp">

        <com.zyp.cardview.YcCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="true"
            app:ycCardCornerRadius="5dp"
            app:ycCardElevation="4dp"
            app:ycCardMaxElevation="8dp"
            app:ycCardPreventCornerOverlap="true"
            app:ycStartShadowColor="@color/yellow_dark" />


    </FrameLayout>

    <LinearLayout
       android:paddingRight="28dp"
        android:paddingLeft="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lnr_avatar"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:padding="20dp"
            android:text="عـ ـعـ  ـع ع "
            android:textColor="@color/grey"
            android:textSize="50dp"
            android:textStyle="bold" />

        <LinearLayout

            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:src="@drawable/ain_1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/doll" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="عـ"
                android:textColor="@color/grey"
                android:textSize="27dp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout

            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:src="@drawable/ain_2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/doll" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="ـعـ"
                android:textColor="@color/grey"
                android:textSize="27dp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout

            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:src="@drawable/ain_3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/doll" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="ـع"
                android:textColor="@color/grey"
                android:textSize="27dp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout

            android:background="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleY="1.5"
                android:scaleX="1.5"
                android:src="@drawable/ain_4" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/doll" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="ع"
                android:textColor="@color/grey"
                android:textSize="27dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/lnr_avatar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_above="@id/lnr_icons"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-15dp"
            android:paddingBottom="10dp"
            android:src="@drawable/girl_detail" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/boy_detail" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lnr_icons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/back_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/back_right" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/music" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/back_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/back_left" />


    </LinearLayout>


</RelativeLayout>
