<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ActivityDetails">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginBottom="-100dp"
        android:layout_above="@id/lnr_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

            <com.zyp.cardview.YcCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:clickable="true"
                android:focusable="true"
                app:ycCardCornerRadius="5dp"
                app:ycCardElevation="8dp"
                app:ycCardMaxElevation="15dp"
                app:ycCardPreventCornerOverlap="true"
                app:ycStartShadowColor="@color/blue" />



    </FrameLayout>

    <RelativeLayout
        android:id="@+id/lnr_avatar"
        android:layout_above="@id/lnr_icons"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="170dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginLeft="-15dp"
            android:paddingBottom="10dp"
            android:src="@drawable/girl_detail" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_marginRight="-10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/boy_detail" />
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="9dp"
            android:padding="4dp"
            android:src="@drawable/p_wellcome" />


    </RelativeLayout>




    <LinearLayout
        android:id="@+id/lnr_icons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="4dp"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/back_right"/>
        <ImageView
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/edit"/>
        <ImageView
            android:id="@+id/music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/music"/>
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/home"/>
        <ImageView
            android:id="@+id/back_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/back_left"/>


    </LinearLayout>


</RelativeLayout>
