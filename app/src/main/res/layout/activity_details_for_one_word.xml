<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="#f39166"
    tools:context=".Activity.ActivityDetails">


    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_above="@id/lnr_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-100dp">

        <com.zyp.cardview.YcCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="true"
            app:ycCardCornerRadius="5dp"
            app:ycCardElevation="4dp"
            app:ycCardMaxElevation="8dp"
            app:ycCardPreventCornerOverlap="true"
            app:ycStartShadowColor="@color/yellow_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:layout_marginBottom="100dp"
            android:paddingRight="28dp">

            <TextView
                android:id="@+id/txt_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="د"
                android:textColor="@color/grey"
                android:textSize="80dp"
                android:textStyle="bold" />

            <LinearLayout
                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/img_example_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/d" />
                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/christmas_tree" />
                <TextView
                    android:id="@+id/txt_wordForFirstAlphabet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingRight="20dp"
                    android:text="د"
                    android:textColor="@color/grey"
                    android:textSize="40dp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>




    <RelativeLayout
        android:id="@+id/lnr_avatar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_above="@id/lnr_icons"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-15dp"
            android:paddingBottom="10dp"
            android:src="@drawable/girl_detail" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="170dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/boy_detail" />
        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="17dp">
            <ImageView
                android:id="@+id/mute"
                android:src="@drawable/smile"
                android:layout_width="50dp"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:layout_height="50dp"/>

            <ImageView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/renew"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-2dp"
                android:src="@drawable/renew" />

        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lnr_icons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/back_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/back_leftt" />

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/img_practice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/edit" />

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/music"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/music" />

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/home" />

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/back_rightt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:src="@drawable/back_right" />


    </LinearLayout>


</RelativeLayout>
